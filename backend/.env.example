# Solobase SaaS Management Platform - Environment Configuration

# ============================================================================
# Application Settings
# ============================================================================
NODE_ENV=development
PORT=3000
LOG_LEVEL=info

# ============================================================================
# Database Configuration (Management Platform)
# ============================================================================
DATABASE_URL=postgresql://solobase:password@localhost:5432/solobase_saas

# Connection pool settings
DB_POOL_MIN=2
DB_POOL_MAX=10

# ============================================================================
# AWS Configuration
# ============================================================================
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your_aws_access_key_id
AWS_SECRET_ACCESS_KEY=your_aws_secret_access_key

# S3 bucket for Lambda binaries
LAMBDA_BINARY_BUCKET=solobase-lambda-binaries

# Shared RDS instances
SHARED_RDS_01_ENDPOINT=shared-rds-01.c9xyz.us-east-1.rds.amazonaws.com
SHARED_RDS_01_MASTER_USER=solobase_master
SHARED_RDS_01_MASTER_PASSWORD=your_master_password

# CloudFront
CLOUDFRONT_KEY_PAIR_ID=your_cloudfront_key_pair_id
CLOUDFRONT_PRIVATE_KEY_PATH=/path/to/cloudfront-private-key.pem

# ============================================================================
# Backblaze B2 Configuration
# ============================================================================
B2_MASTER_KEY_ID=your_b2_master_key_id
B2_MASTER_APPLICATION_KEY=your_b2_master_application_key
B2_REGION=us-west-004
B2_ENDPOINT=https://s3.us-west-004.backblazeb2.com

# ============================================================================
# Stripe Configuration
# ============================================================================
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# Stripe Price IDs (create these in Stripe Dashboard)
STRIPE_PRICE_HOBBY_MONTHLY=price_hobby_monthly_id
STRIPE_PRICE_HOBBY_YEARLY=price_hobby_yearly_id
STRIPE_PRICE_STARTER_MONTHLY=price_starter_monthly_id
STRIPE_PRICE_STARTER_YEARLY=price_starter_yearly_id
STRIPE_PRICE_PROFESSIONAL_MONTHLY=price_professional_monthly_id
STRIPE_PRICE_PROFESSIONAL_YEARLY=price_professional_yearly_id
STRIPE_PRICE_BUSINESS_MONTHLY=price_business_monthly_id
STRIPE_PRICE_BUSINESS_YEARLY=price_business_yearly_id

# ============================================================================
# JWT Configuration
# ============================================================================
JWT_SECRET=your_super_secret_jwt_key_change_this_in_production
JWT_EXPIRATION=1h
REFRESH_TOKEN_EXPIRATION=30d

# ============================================================================
# Email Configuration (for notifications)
# ============================================================================
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=noreply@solobase.dev
SMTP_PASSWORD=your_smtp_password
SMTP_FROM_EMAIL=noreply@solobase.dev
SMTP_FROM_NAME=Solobase

# SendGrid alternative
SENDGRID_API_KEY=your_sendgrid_api_key

# ============================================================================
# Application URLs
# ============================================================================
FRONTEND_URL=https://solobase.dev
DASHBOARD_URL=https://solobase.dev/dashboard
API_URL=https://api.solobase.dev

# Customer instance domain
CUSTOMER_INSTANCE_DOMAIN=solobase.cloud

# ============================================================================
# Redis (for session storage and job queues)
# ============================================================================
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=your_redis_password

# ============================================================================
# Monitoring & Analytics
# ============================================================================
SENTRY_DSN=https://your_sentry_dsn
SENTRY_ENVIRONMENT=development

# CloudWatch
CLOUDWATCH_LOG_GROUP=/aws/solobase/management-platform
CLOUDWATCH_LOG_STREAM=app

# ============================================================================
# Rate Limiting
# ============================================================================
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100

# ============================================================================
# Instance Provisioning
# ============================================================================
DEFAULT_SOLOBASE_VERSION=latest
PROVISIONING_TIMEOUT_MINUTES=15
MAX_CONCURRENT_PROVISIONING=5

# Health check interval (minutes)
HEALTH_CHECK_INTERVAL=5

# ============================================================================
# Feature Flags
# ============================================================================
ENABLE_SIGNUP=true
ENABLE_INSTANCE_CREATION=true
ENABLE_CUSTOM_DOMAINS=true
ENABLE_BACKUPS=true

# ============================================================================
# Development Settings
# ============================================================================
DEBUG=false
MOCK_AWS=false
MOCK_STRIPE=false
MOCK_B2=false
